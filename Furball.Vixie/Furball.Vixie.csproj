<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Configurations>Debug;Release;DebugWithGL</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'DebugWithGL' ">
      <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
      <Optimize Condition=" '$(Optimize)' == '' ">false</Optimize>
      <DebugType>full</DebugType>
      <DefineConstants>TRACE;DEBUG</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DebugType>full</DebugType>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FontStashSharp" Version="1.0.4" />
      <PackageReference Include="ImGui.NET" Version="1.86.0" />
      <PackageReference Include="Kettu" Version="1.2.2" />
      <PackageReference Include="SharpDX.D3DCompiler" Version="4.2.0" />
      <PackageReference Include="SharpDX.Direct3D11" Version="4.2.0" />
      <PackageReference Include="Silk.NET.Input" Version="2.14.0" />
      <PackageReference Include="Silk.NET.Input.Extensions" Version="2.14.0" />
      <PackageReference Include="Silk.NET.OpenGL" Version="2.14.0" />
      <PackageReference Include="Silk.NET.OpenGL.Legacy" Version="2.14.0" />
      <PackageReference Include="Silk.NET.OpenGL.Legacy.Extensions.EXT" Version="2.14.0" />
      <PackageReference Include="Silk.NET.OpenGLES" Version="2.14.0" />
      <PackageReference Include="Silk.NET.OpenGLES.ANGLE.Native" Version="2022.3.11" />
      <PackageReference Include="Silk.NET.OpenGLES.Extensions.ANGLE" Version="2.14.0" />
      <PackageReference Include="Silk.NET.Windowing" Version="2.14.0" />
      <PackageReference Include="Silk.NET.Windowing.Extensions.Veldrid" Version="2.14.0" />
      <PackageReference Include="SixLabors.ImageSharp" Version="2.0.0" />
      <PackageReference Include="Veldrid.ImGui" Version="5.72.0" />
      <PackageReference Include="Veldrid.SPIRV" Version="1.0.14" />
      <PackageReference Include="Veldrid.Utilities" Version="4.9.0-beta1" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="ShaderCode\OpenGL20\FragmentShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL20\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL41\InstancedRenderer\FragmentShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL41\InstancedRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL41\LineRenderer\GeometryShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL41\LineRenderer\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL41\LineRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGLES\InstancedRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGLES\InstancedRenderer\FragmentShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGLES\LineRenderer\GeometryShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGLES\LineRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGLES\LineRenderer\PixelShader.glsl" />
      <None Remove="ShaderCode\OpenGL20\LineFragmentShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL20\LineFragmentShader.glsl" />
      <None Remove="ShaderCode\OpenGL20\LineVertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\OpenGL20\LineVertexShader.glsl" />
        
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSL\imgui-frag.glsl"> 
            <LogicalName>imgui-frag.glsl</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSL\imgui-vertex.glsl"> 
            <LogicalName>imgui-vertex.glsl</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSL\imgui-vertex-legacy.glsl"> 
            <LogicalName>imgui-vertex-legacy.glsl</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSLES\imgui-frag.glsles"> 
            <LogicalName>imgui-frag.glsles</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSLES\imgui-vertex.glsles"> 
            <LogicalName>imgui-vertex.glsles</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\GLSLES\imgui-vertex-legacy.glsles"> 
            <LogicalName>imgui-vertex-legacy.glsles</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-frag.hlsl.bytes"> 
            <LogicalName>imgui-frag.hlsl.bytes</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-vertex-legacy.hlsl.bytes"> 
            <LogicalName>imgui-vertex-legacy.hlsl.bytes</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-vertex.hlsl.bytes"> 
            <LogicalName>imgui-vertex.hlsl.bytes</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\Metal\imgui-frag.metal"> 
            <LogicalName>imgui-frag.metal</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\Metal\imgui-frag.metallib"> 
            <LogicalName>imgui-frag.metallib</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\Metal\imgui-vertex.metal"> 
            <LogicalName>imgui-vertex.metal</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\Metal\imgui-vertex.metallib"> 
            <LogicalName>imgui-vertex.metallib</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\SPIR-V\imgui-frag.spv"> 
            <LogicalName>imgui-frag.spv</LogicalName>
        </EmbeddedResource>
        <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\SPIR-V\imgui-vertex.spv"> 
            <LogicalName>imgui-vertex.spv</LogicalName>
        </EmbeddedResource>
        <None Remove="ShaderCode\Veldrid\FragmentShader.glsl" />
        <EmbeddedResource Include="ShaderCode\Veldrid\FragmentShader.glsl" />
        <None Remove="ShaderCode\Veldrid\VertexShader.glsl" />
        <EmbeddedResource Include="ShaderCode\Veldrid\Lines\FragmentShader.glsl" />
        <EmbeddedResource Include="ShaderCode\Veldrid\Lines\VertexShader.glsl" />
        <EmbeddedResource Include="ShaderCode\Veldrid\VertexShader.glsl" />
        <None Remove="ShaderCode\Veldrid\Lines\GeometryShader.glsl" />
        <None Remove="ShaderCode\Veldrid\Lines\FragmentShader.glsl" />
        <None Remove="ShaderCode\Veldrid\Lines\VertexShader.glsl" />
        
    </ItemGroup>

    <ItemGroup>
      <Folder Include="ShaderCode\" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="ShaderCode\Direct3D11\QuadRenderer\Shaders.hlsl" />
      <EmbeddedResource Include="ShaderCode\Direct3D11\ImGui\Shaders.hlsl" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Silk.NET.OpenGL.Extensions.ImGui, Version=2.14.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>Silk.NET.OpenGL.Extensions.ImGui.dll</HintPath>
      </Reference>
      <Reference Include="Silk.NET.OpenGL.Legacy.Extensions.ImGui, Version=2.14.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>Silk.NET.OpenGL.Legacy.Extensions.ImGui.dll</HintPath>
      </Reference>
      <Reference Include="Silk.NET.OpenGLES.Extensions.ImGui, Version=2.14.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>Silk.NET.OpenGLES.Extensions.ImGui.dll</HintPath>
      </Reference>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-frag.hlsl" />
      <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-vertex-legacy.hlsl" />
      <EmbeddedResource Include="ShaderCode\Veldrid\ImGuiShaders\HLSL\imgui-vertex.hlsl" />
    </ItemGroup>

</Project>
