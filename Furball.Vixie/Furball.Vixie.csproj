<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Configurations>Debug;Release;DebugNoImGui</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'DebugNoImGui' ">
      <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
      <Optimize Condition=" '$(Optimize)' == '' ">false</Optimize>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FontStashSharp" Version="1.0.4" />
      <PackageReference Include="Kettu" Version="1.2.0" />
      <PackageReference Include="Silk.NET" Version="2.9.0" />
      <PackageReference Include="Silk.NET.OpenGL.Extensions.ImGui" Version="2.9.0" />
      <PackageReference Include="SixLabors.ImageSharp" Version="1.0.4" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="ShaderCode\BasicShader\BasicPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicShader\BasicVertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicTexturedShader\BasicTexturedPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BatchRenderer\BatchRendererPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BatchRenderer\BatchRendererVertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\InstanceRenderer\InstanceRendererPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\InstanceRenderer\InstanceRendererVertexShader.glsl" />
      <None Remove="ShaderCode\BatchRendererPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicTexturedShader\BasicTexturedVertexShader.glsl" />
      <None Remove="ShaderCode\BatchRendererVertexShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\GeometryShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\GeometryShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\PixelShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\VertexShader.glsl" />
    </ItemGroup>

</Project>
