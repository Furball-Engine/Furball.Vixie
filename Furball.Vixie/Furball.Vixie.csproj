<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Configurations>Debug;Release;DebugWithGL</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'DebugWithGL' ">
      <DebugSymbols Condition=" '$(DebugSymbols)' == '' ">true</DebugSymbols>
      <Optimize Condition=" '$(Optimize)' == '' ">false</Optimize>
      <DebugType>full</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DebugType>full</DebugType>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FontStashSharp" Version="1.0.4" />
      <PackageReference Include="ImGui.NET" Version="1.86.0" />
      <PackageReference Include="Kettu" Version="1.2.2" />
      <PackageReference Include="Silk.NET.Input" Version="2.13.0" />
      <PackageReference Include="Silk.NET.Input.Extensions" Version="2.13.0" />
      <PackageReference Include="Silk.NET.OpenGLES" Version="2.13.0" />
      <PackageReference Include="Silk.NET.OpenGLES.Extensions.ImGui" Version="2.13.0" />
      <PackageReference Include="Silk.NET.Windowing" Version="2.13.0" />
      <PackageReference Include="SixLabors.ImageSharp" Version="2.0.0" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="ShaderCode\BasicShader\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicShader\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicTexturedShader\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BatchRenderer\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BatchRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\ImmediateRenderer\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\ImmediateRenderer\VertexShader.glsl" />
      <None Remove="ShaderCode\BatchRendererPixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\BasicTexturedShader\VertexShader.glsl" />
      <None Remove="ShaderCode\BatchRendererVertexShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\GeometryShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\GeometryShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\PixelShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\PixelShader.glsl" />
      <None Remove="ShaderCode\LineRenderer\VertexShader.glsl" />
      <EmbeddedResource Include="ShaderCode\LineRenderer\VertexShader.glsl" />
      <None Update="SharedLibs\Silk.NET.OpenGLES.Extensions.ImGui.dll">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
